<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/listEntryLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/teamEntryVisLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/TeamNumText"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="Team Number"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/statText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="52dp"
            android:layout_marginLeft="52dp"
            android:text="Stat Text"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
    </LinearLayout>

    <View
        android:id="@+id/TopLineView"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/black"
        style="@style/FunStyle"/>

    <LinearLayout
        android:id="@+id/hiddenTeamEntry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        style="@style/FunStyle">

        <TextView
            android:id="@+id/teleopSubText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="Teleop"
            style="@style/FunStyle"/>

        <TextView
            android:id="@+id/autoSubText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="Auto"
            style="@style/FunStyle"/>

        <TextView
            android:id="@+id/climbRateSubText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="Climb Rate"
            style="@style/FunStyle"/>

        <Button
            android:id="@+id/teamInfoButton"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Team Info"
            />
    </LinearLayout>

    <View
        android:id="@+id/BottomLineView"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/black"
        style="@style/FunStyle"/>

</LinearLayout>